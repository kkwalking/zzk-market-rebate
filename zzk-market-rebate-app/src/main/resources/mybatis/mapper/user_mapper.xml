<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.kelton.infrastructure.dao.IUserDao">

    <resultMap id="dataMap" type="top.kelton.infrastructure.dao.po.UserPO">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="user_name" property="userName"/>
        <result column="age" property="age"/>
    </resultMap>

    <select id="insert" parameterType="top.kelton.infrastructure.dao.po.UserPO">
        INSERT INTO user ( user_id, user_name, age)
        VALUES (#{userId}, #{userName}, #{age})
    </select>
    

    <select id="selectByUserId" parameterType="java.lang.String" resultMap="dataMap">
        SELECT id, user_id, user_name, age
        FROM user
        WHERE user_id = #{userId}
    </select>

</mapper>
